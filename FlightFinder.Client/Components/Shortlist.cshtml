<h2>Shortlist (@Itineries.Count)</h2>

@foreach (var item in Itineries)
{
    <ul class="list-group mb-4">
        <li class="list-group-item justify-content-between">
            <div>
                <nobr>@item.Outbound.FromAirportCode</nobr> -
                <nobr>@item.Outbound.ToAirportCode</nobr>
                <button type="button" class="close" aria-label="Close" @onclick(() => OnRemoveItinery(item))>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </li>
        <li class="list-group-item">
            <ShortlistFlightSegment Flight="item.Outbound" />
        </li>
        <li class="list-group-item">
            <ShortlistFlightSegment Flight="item.Return" />
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center py-2">
            <div class="airline"><h4>@item.AirlineName</h4></div>
            <div class="price"><h2>@item.Price.ToString("$0")</h2></div>
        </li>
    </ul>
}

@functions
{
    public ICollection<Itinery> Itineries { get; set; }
    public Action<Itinery> OnRemoveItinery { get; set; }
}