@inject AppState state

<div id="search-and-results-area">
    <div id="search-area" class="px-2 py-3">
        <Search OnSearch="state.Search" />
    </div>

    <div id="results-area">
        <GreyOutZone IsGreyOut="state.SearchInProgress">
            <SearchResult Itineries="state.SearchResults" OnAddItinery="state.AddToShortlist" />
        </GreyOutZone>
    </div>


</div>

<div id="selections-area" class="p-3 pl-4">
    <Shortlist Itineries="state.Shortlist" OnRemoveItinery="state.RemoveFromShortlist" />
</div>

@functions
{ protected override void OnInit()
{
    state.OnChange += StateHasChanged;
}
}